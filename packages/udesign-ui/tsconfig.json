{
  "compilerOptions": {
    "rootDir": "src",
    "target": "es6",
    "moduleResolution": "node",
    "jsx": "react",
    "allowJs": true,
    "declaration": false,
    "esModuleInterop": true,
    "importHelpers": true,
    "downlevelIteration": true,
    "sourceMap": true,
    "baseUrl": "./src",
    "outDir": "dist",
    "lib": ["ES2015", "DOM"],
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "strict": true,
    "noImplicitAny": true,
    "resolveJsonModule": true
  },
  "include": ["typings.d.ts", "**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules", "lib", "es", "dist"],
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS",
      "resolveJsonModule": true,
      "noImplicitAny": false
    }
  }
}
